@model Employee

<form method="post" asp-action="DeletePost">
	<input asp-for="EmployeeId" hidden/>
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Employee</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="EmployeeId"></label>
			<input asp-for="EmployeeId" class="form-control" disabled />
		</div>
		<div class="mb-3">
			<label asp-for="FirstName"></label>
			<input asp-for="FirstName" class="form-control" disabled />
		</div>
		<div class="mb-3">
			<label asp-for="LastName"></label>
			<input asp-for="LastName" class="form-control" disabled />
		</div>
		<div class="mb-3">
			<label asp-for="Email"></label>
			<input asp-for="Email" class="form-control" disabled />
		</div>
		<div class="mb-3">
			<label asp-for="DOB"></label>
			<input asp-for="DOB" class="form-control" disabled />
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="Employee" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

