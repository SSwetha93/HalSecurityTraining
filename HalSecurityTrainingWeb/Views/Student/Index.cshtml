@model IEnumerable<Student>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Student List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Student" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Student
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:85%">
    <thead>
        <tr>
            <th>Student Id</th>
            <th>Student Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var student in Model )
        {
            <tr>
                <td width="35%">
                    @student.StudentId
                </td>
                <td width="50%">
                    @student.FirstName  @student.LastName
                </td>
            </tr>
        }
    </tbody>

</table>

